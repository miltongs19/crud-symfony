{% extends 'base.html.twig' %}
{% block title %}Projeto CRUD{% endblock %}
{% block body %}
<h1>Página de artigos</h1>
{% if articles %}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Título artigo</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article }}</td>
                    <td>
                        <a href="/article/1" class="btn btn-dark">Exibir</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% else %}
<p>Nenhum artigo cadastrado</p>
{% endif %}
{% endblock %}
